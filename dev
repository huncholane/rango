#!/bin/bash
# For development only

# if venv doesn't exist initialize it
if [ ! -d "venv" ]; then
    bash devscripts/init
fi
bash devscripts/activate_ready
source venv/**/activate

# run devscript for args 1+ if they exist
if [ -n "$1" ]; then
    bash devscripts/$1 ${@:2}
else
    docker compose down
    docker compose up --build --remove-orphans
fi