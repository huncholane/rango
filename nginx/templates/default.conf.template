upstream rango {
    server web:8000;
}

server {
    server_name ${NGINX_HOST};
    location / {
        proxy_pass http://rango;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
    }
    location /assets/ {
        root /web/;
    }
    location /media/ {
        root /web/;
    }
}